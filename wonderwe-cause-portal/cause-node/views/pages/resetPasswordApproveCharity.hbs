<div class="row signup-box">
	<div class=" success col-sm-7 col-md-6 col-lg-5 col-centered whitebox">
		<h2>Please enter a new password</h2>
		<br />
		<form class="form-horizontal" id="js-resetPassword">
			<fieldset>
				<div class="form-group">
					<div class="input-group col-sm-7">
						<span class="input-group-addon"><i class="fa fa-lock"></i></span>
						<input type="password" class="form-control" id="js-password" name="password" placeholder="New Password">
					</div>
				</div>
				<div class="form-group">
					<div class="input-group col-sm-7">
						<span class="input-group-addon"><i class="fa fa-lock"></i></span>
						<input type="password" class="form-control" id="js-passwordConform" name="confirmPassword" placeholder="Confirm Password">
					</div>
				</div>
				<div class="row">
					<div class="col-md-4">
						<a class="btn btn-orange" data-id="{{id}}" data-charityName="{{charityName}}" data-charityid="{{charityid}}" data-from="{{from}}" data-fundraiseslug="{{slug}}" data-fundraiseuserid="{{userid}}" data-fundraisecodeid="{{codeid}}" data-referenceuserid="{{referenceuserid}}" id="js-setPasswordApprove">Save Password</a>
					</div>
				</div>
			</fieldset>
		</form>
	</div>
</div>
